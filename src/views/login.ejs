    <main>

        <article class="contact active" data-page="contact">

            <header>
                <h2 class="h2 article-title">Login</h2>
            </header>

            <section class="contact-form">

                <h3 class="h3 form-title">Enter your credentials</h3>
                <% if (typeof error !=='undefined' && error !==null) { %>
                    <div class="error-container" id="errorContainer">
                        <div class="close-icon" onclick="closeError()">Ã—</div>
                        <p id="errorMessage">
                            <%= error %>
                        </p>
                    </div>
                    <% } %>
                        <form method="POST" action="/verify" class="form" data-form>

                            <div class="input-wrapperr">
                                <input type="text" id="username" name="username" class="form-input"
                                    placeholder="Username" required data-form-input>

                            </div>
                            <div class="input-wrapperr">
                                <input type="password" id="userpassword" name="userpassword" class="form-input"
                                    placeholder="Password" required data-form-input>
                            </div>

                            <div class="input-wrapperrr">
                                <button class="form-btn " type="submit" data-form-btn>
                                    <span>Log in</span>
                                </button>
                            </div>
                           
                           

                        </form>

            </section>

        </article>

        </div>

    </main>
